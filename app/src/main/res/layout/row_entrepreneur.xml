<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/row_entreprise"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFF"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ger_img"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/bckgrnd_1"
            card_view:civ_border_width="2dp"
            card_view:civ_border_color="#000"
            />

        <TextView
            android:id="@+id/txt_ger_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Nom artelier"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            card_view:layout_constraintStart_toEndOf="@+id/ger_img"
            card_view:layout_constraintTop_toTopOf="@+id/ger_img"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_ger_prenoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nom de Profession1"
            card_view:layout_constraintStart_toEndOf="@+id/ger_img"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_ger_nom"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_ger_tel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nom de Profession2"
            card_view:layout_constraintStart_toEndOf="@+id/ger_img"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_ger_prenoms"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_ger_tel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nom de Profession3"
            card_view:layout_constraintStart_toEndOf="@+id/ger_img"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_ger_tel1"
            android:textColor="#000"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>